<style type="text/css">
.sign-in-container {
    max-width: 500px;
}
</style>

<section class="sec1">
  

  <div class="registro container sign-in-container">
    <h2>Mi perfil</h2>
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <% if devise_error_messages!.present? %>
                <script type="text/javascript">
                  toastr['error']('<%= devise_error_messages!.gsub(/\t/, "").gsub(/\n/, "").html_safe %>')
                </script>
              <% end %>        

              <div class="row">
                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :nombres %><br />
                    <%= f.text_field :nombres %>
                  </div>
                </div>
          
                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :apellidos %><br />
                    <%= f.text_field :apellidos %>
                  </div>
                </div>

               <div class="col-md-4">
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email %>
                  </div>
                </div>

              </div>


               <div class="row">
                 <div class="col-md-4">
                  <div class="field">
                    <%= f.label :fecha_nacimiento %><br />
                    <%= f.date_field :fecha_nacimiento %>
                  </div>
                </div>

              <div class="col-md-4">
                  <label>Tipo de documento</label>
                  <%= f.select :tipo_documento, options_for_select([["Cedula", "Cedula"], ["Tarjeta de identidad", "Tarjeta de identidad"],["Pasaporte", "Pasaporte"]],:selected => @user.tipo_documento), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                </div>


                <div class="col-md-4">
                  <div class="field">
                   <label>Número  de documento</label>
                    <%= f.text_field :numero_documento %>
                  </div>
                </div>

              </div>

     

              <div class="row">
              
                  <div class="col-md-4">
                  <div class="field">
                    <label>Correo electrónico</label>
                    <%= f.text_field :email %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                   <label>Celular</label>
                    <%= f.text_field :celular %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                    <label>Dirección</label>
                    <%= f.text_field :direccion %>
                  </div>
                </div>


              </div>
   

                <div class="row">

               
                <div class="col-md-4">
                  <div class="field">
                  <label>Departamento</label>
                  <%= f.select :department_id,options_for_select(Department.all.collect{ |u| [ u.name, u.id] }), :selected => @user.department_id,:class => "chosen-select", required: true %> </div>          
                </div>
              
               

                 <div class="col-md-4">
                  <div class="field">
                  <label>Ciudad</label>
                    <%= f.select :city_id,options_for_select(City.all.collect{ |u| [ u.name, u.id] }), :selected => @user.city_id,:class => "chosen-select", required: true %>      
                     </div>
              </div>


                <div class="col-md-4">
                  <div class="field">
                   <label>Nivel educativo</label>
                   <%= f.select :nivel_educativo, options_for_select([["Bachillerato", "Bachillerato"], ["Técnica", "Técnica"],["Tecnología", "Tecnología"],["Pregrado", "Pregrado"],["Posgrado", "Posgrado"],["Doctorado", "Doctorado"],["Posdoctorado", "Posdoctorado"]],:selected => @user.nivel_educativo), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                  </div>
                </div>
                  </div>

                <div class="row">
                 <div class="col-md-4">
                  <div class="field">
                    <label>Nombre Carrera</label>
                    <%= f.text_field :carrera %>
                  </div>
                </div>

                <div class="col-md-4">
                   <div class="field">
                   <label>Experiencia Laboral</label>
                   <%= f.select :experiencia_laboral, options_for_select([["1 año", "1 año"], ["2 años", "2 años"],["3 años", "3 años"],["5 años", "5 años"],["8 años", "8 años"],["10 años o más", "10 años o m"]],:selected => @user.experiencia_laboral), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                  </div>
                </div>

                   <div class="col-md-4">
                  <div class="field">
                    <label>Referencia laboral</label>
                    <%= f.text_field :referencia_laboral %>
                  </div>
                </div>   
              </div>

             
              <div class="row">

                <div class="col-md-4">
                  <div class="field">
                   <label>Cargar hoja de vida</label>
                    <%= f.file_field :cv %>
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="field">
                   <label>Celular referencia</label>
                    <%= f.text_field :celular_referencia %>
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :current_password, "Contraseña actual" %><br />
                    <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
                  </div>
                </div>

              </div>



              <div class="row">

                <div class="col-md-4 center">
                  <button type="submit" class="log-submit-btn">
                    <span>Actualizar</span>
                  </button>
                </div>

              </div>

             
                
            
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
