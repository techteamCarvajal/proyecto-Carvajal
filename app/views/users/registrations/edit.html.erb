<style type="text/css">
.sign-in-container {
    max-width: 500px;
}
</style>

<section class="sec1">
  

  <div class="registro container sign-in-container">
    <h2>Mi perfil</h2>
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <% if devise_error_messages!.present? %>
                <script type="text/javascript">
                  toastr['error']('<%= devise_error_messages!.gsub(/\t/, "").gsub(/\n/, "").html_safe %>')
                </script>
              <% end %>        

              <div class="row">
                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :nombres %><br />
                    <%= f.text_field :nombres %>
                  </div>
                </div>
          
                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :apellidos %><br />
                    <%= f.text_field :apellidos %>
                  </div>
                </div>

               <div class="col-md-4">
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email %>
                  </div>
                </div>

              </div>


               <div class="row">
                 <div class="col-md-4">
                  <div class="field">
                    <%= f.label :fecha_nacimiento %><br />
                    <%= f.date_field :fecha_nacimiento %>
                  </div>
                </div>

              <div class="col-md-4">
                  <label>Tipo de documento</label>
                  <%= f.select :tipo_documento, options_for_select([["Cedula", "Cedula"], ["Tarjeta de identidad", "Tarjeta de identidad"],["Pasaporte", "Pasaporte"]]), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                </div>


                <div class="col-md-4">
                  <div class="field">
                   <label>Número  de documento</label>
                    <%= f.text_field :numero_documento %>
                  </div>
                </div>

              </div>

     

              <div class="row">
              
                  <div class="col-md-4">
                  <div class="field">
                    <label>Correo electrónico</label>
                    <%= f.text_field :email %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                   <label>Celular</label>
                    <%= f.text_field :celular %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                    <label>Dirección</label>
                    <%= f.text_field :direccion %>
                  </div>
                </div>


              </div>
   

              <div class="row">
               
           <div class="col-md-4">
                   <label>Departamento</label>
                  <%= f.select :departamento, options_for_select([["Cedula", "Cedula"], ["Tarjeta de identidad", "Tarjeta de identidad"],["Pasaporte", "Pasaporte"]]), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                </div>
                

                 <div class="col-md-4">
                   <label>Ciudad</label>
                   <%= f.select :ciudad, options_for_select([["Cedula", "Cedula"], ["Tarjeta de identidad", "Tarjeta de identidad"],["Pasaporte", "Pasaporte"]]), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %>  
                </div>


                <div class="col-md-4">
                  <div class="field">
                   <label>Nivel educativo</label>
                   <%= f.select :nivel_educativo, options_for_select([["Técnica", "Técnica"], ["Tecnologia", "Tecnologia"],["Pregrado", "Pregrado"],["Especialización", "Especialización"],["Maestria", "Maestria"],["Doctorado", "Doctorado"]]), {:prompt => "Seleccionar"}, {:class => "chosen-select", required: true} %> 
                  </div>
                </div>

              
              </div>



              <div class="row">
               
                 <div class="col-md-4">
                  <div class="field">
                    <label>Nombre Carrera</label>
                    <%= f.text_field :carrera %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                   <label>Experiencia laboral</label>
                    <%= f.text_field :experiencia_laboral %>
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="field">
                    <label>Referencia laboral</label>
                    <%= f.text_field :referencia_laboral %>
                  </div>
                </div>
               
              </div>


              <div class="row">
                <div class="col-md-4">
                  <div class="field">
                   <label>Cargar hoja de vida</label>
                    <%= f.file_field :cv %>
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="field">
                   <label>Celular referencia</label>
                    <%= f.text_field :celular_referencia %>
                  </div>
                </div>
            

                <div class="col-md-4">
                  <div class="field">
                    <label>Contraseña</label>
                    <%= f.password_field :password, autocomplete: "off" %>
                  </div>
                </div>

               
              </div>


              <div class="row">

                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="field">
                    <%= f.label :current_password %><br />
                    <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
                  </div>
                </div>
                <div class="col-md-4">
                  <button type="submit" class="log-submit-btn">
                    <span>Actualizar</span>
                  </button>
                </div>

              </div>

             
                
            
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
