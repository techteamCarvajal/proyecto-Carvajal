<style type="text/css">
.sign-in-container {
    max-width: 500px;
}
</style>

<section class="sec1">
  

  <div class="registro container sign-in-container">
    <h2>Etapa 3</h2>
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form">
            <%= form_for @folder, method: :put, url: wizard_path do |f| %>
              <% if f.object.errors.any? %>
              <div class="error_messages">
              <% f.object.errors.full_messages.each do |error| %>
                 <p><%= error %></p>
                     <% end %>
                       </div>
                  <% end %>     
 

             <div class="row">
                    <div class="col-md-6">
                     <div class="field">
                    <label>Certificado cuenta bancaria</label>
                    <%= f.file_field :certificado_cuenta_bancaria , required: true %>
                  </div>
                </div>

                    <div class="col-md-6">
                  <div class="field">
                    <label>Fondo de pensión</label>
                    <%= f.file_field :fondo_pension , required: true %>
                  </div>
                </div>
              </div>
            

              <div class="row">
                    <div class="col-md-6">
                     <div class="field">
                    <label>Afiliación de cesantias</label>
                    <%= f.file_field :cesantias , required: true %>
                  </div>
                </div>

                    <div class="col-md-6">
                  <div class="field">
                    <label>Cerificado de EPS</label>
                    <%= f.file_field :certificado_eps , required: true %>
                  </div>
                </div>
              </div>

                 <div class="row">
                <div class="col-md-8 col-md-offset-4">
                  <button type="submit" class="log-submit-btn">
                    <span>Continuar</span>
                  </button>
                </div>
              </div>
              <% end %>

          