<style type="text/css">
.sign-in-container {
    max-width: 500px;
}
</style>

<section class="sec1">
  

  <div class="registro container sign-in-container">
    <h2>Etapa 6</h2>
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form">
            <%= form_for @folder, method: :put, url: wizard_path do |f| %>
              <% if f.object.errors.any? %>
              <div class="error_messages">
              <% f.object.errors.full_messages.each do |error| %>
                 <p><%= error %></p>
                     <% end %>
                       </div>
                  <% end %>     
 

             <div class="row">
                    <div class="col-md-6">
                     <div class="field">
                    <label>ARL</label>
                    <%= f.file_field :arl , required: true %>
                  </div>
                </div>

                    <div class="col-md-6">
                  <div class="field">
                    <label>Radicaci√≥n de EPS</label>
                    <%= f.file_field :radicacion_eps , required: true %>
                  </div>
                </div>
              </div>
            


                 <div class="row">
                <div class="col-md-8 col-md-offset-4">
                  <button onclick="finalizado()" type="submit" class="log-submit-btn">
                    <span>Completar</span>
                  </button>
                </div>
              </div>
              <% end %>