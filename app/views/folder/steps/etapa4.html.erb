<style type="text/css">
.sign-in-container {
    max-width: 500px;
}
</style>

<section class="sec1">
  

  <div class="registro container sign-in-container">
    <h2>Etapa 4</h2>
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form">
            <%= form_for @folder, method: :put, url: wizard_path do |f| %>
              <% if f.object.errors.any? %>
              <div class="error_messages">
              <% f.object.errors.full_messages.each do |error| %>
                 <p><%= error %></p>
                     <% end %>
                       </div>
                  <% end %>     
 

            <div class="row">
                    <div class="col-md-6">
                     <div class="field">
                    <label>Descargar contrato</label>
                  <a href="https://firebasestorage.googleapis.com/v0/b/escueladigital-d9efd.appspot.com/o/Politica%20tratamiento%20de%20datos%20unificada.pdf?alt=media&token=8f85cca8-cbc6-4c25-9b3d-5f34a7946d86" download="Contrato"><div style="width:100%; margin-top: 0; padding: 17px 60px; font-size: 16px;" class="log-submit-btn">
                    <span>Descargar</span>
                  </div></a> 
                  </div>
                </div>

                    <div class="col-md-6">
                  <div class="field">
                    <label>Subir contrato </label>
                    <%= f.file_field :oferta , required: true %>
                  </div>
                </div>
              </div>
            
             <div>
    <iframe style=" width:100%; height: 450px;"src="https://firebasestorage.googleapis.com/v0/b/escueladigital-d9efd.appspot.com/o/Politica%20tratamiento%20de%20datos%20unificada.pdf?alt=media&token=8f85cca8-cbc6-4c25-9b3d-5f34a7946d86"></iframe>
    </div>

    
                 <div class="row">
                <div class="col-md-8 col-md-offset-4">
                  <button type="submit" class="log-submit-btn">
                    <span>Continuar</span>
                  </button>
                </div>
              </div>
              <% end %>
