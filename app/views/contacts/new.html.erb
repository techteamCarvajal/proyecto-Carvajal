<section class="sec1">
  <div class="container">
    <div class="section-title">
        <h2>Formulario de contacto</h2>
        <div class="section-subtitle">Contacto</div>
        <span class="section-separator"></span>
        <p>Puedes contactarnos llenando el siguiente formulario</p><br>
    </div>
  </div>

  <div class="container sign-in-container">
    <div class="tabs-container">
      <div class="tab">
        <div id="tab-1" class="tab-content">
          <div class="custom-form" style="text-align: center;">
            <div class="col-md-8 col-md-offset-2">
              <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                
                <div class="col-md-12">
                  <%= f.label :name, "Nombre" %>
                  <%= f.text_field :name, autofocus: true, placeholder: "Nombre de usuario", 
                  title: 'Pon el nombre de tu usuario', 'data-toggle' => 'tooltip',class: "form-control", required: true, value: "#{(user_signed_in?) ? current_user.first_name + ' ' + current_user.last_name : '' }" %>
                 </div>

                <div class="col-md-12">
                  <%= f.label :email, "Correo" %>    
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", title: 'Pon tu email', 'data-toggle' => 'tooltip',class: "form-control", required: true, value: "#{(user_signed_in?) ? current_user.email : '' }" %>
                </div>
                
                <div class="col-md-12">
                  <%= f.label :message, "Mensaje" %>
                  <%= f.text_area :message, autofocus: true, placeholder: "Describe en detalle la razÃ³n de tu mensaje", title: 'Mensaje', 'data-toggle' => 'tooltip',class: "form-control", required: true %>
                </div>

                </br>

                <div class="col-md-4 col-md-offset-4">
                  <button class="btn  big-btn  color-bg flat-btn" type="submit" style="width: 100%">
                    Enviar comentario
                    <i class="fa fa-angle-right"></i>
                  </button>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>